<div class="container">
  <ul class="nav navbar-nav navbar">
    <li><%= link_to "Tous les livres", root_path %></li>
 <% Category.all.each do |category| %>
 <li><%= link_to category.genre, books_path(category: category.genre.capitalize) %></li>
 <% end%>
</ul>
  <div class="row">
    <% @books.each do |book| %>
    <div class="col-sm-6 col-md-4 col-lg-4 mt-4">
     <div class="card">
      <%= link_to (image_tag book.image.url,class:"card-img-top"), book%><br/>
      <div class="card-block">
          <h4 class="card-title"><%= book.title.capitalize   %></h4>
          <div class="card-text">
            <%= book.summery %> papa
          </div>
      </div>
        <div class="card-footer">

          <span class="float-right"><%= button_to "Voir le menu", book, class: "btn btn-primary navbar-btn", :method => :get  %>  </span>
        </div>
     </div>
    </div>
    <% end %>
  </div>
  </div>
