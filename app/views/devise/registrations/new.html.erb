<div class="row">
  <div class="col-lg-4 col-md-offset-4 text-center">

    <h2>Bienvenue sur Bibliorun</h2><br><br> <h4>Créer un compte</h4><br><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/devise_errors" %>

      <div class="form-gtoup">
        <%= f.text_field :full_name, autofocus: true, class: "form-control", placeholder: "Nom complet (prénom + nom)" %>
      </div>
        <br />
      <div class="form-gtoup">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse email" %>
      </div>

      <div class="form-gtoup">
        <br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Créer un mot de passe" %>
      </div>

        <br />
      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
