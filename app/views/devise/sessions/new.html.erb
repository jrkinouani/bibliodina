<div class="row">
  <div class="col-lg-4 col-md-offset-4 text-center">


    <h2>Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">

        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "adresse email" %>
      </div>

      <div class="form-group">

        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "mot de passe" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %> Se souvenir de moi

        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Connexion", class: "btn btn-primary" %>
      </div>
    <% end %>
    <br>
      <div class="text-center">
        <h5><%= link_to "Vous n'avez pas de compte ? Inscrivez-vous", new_user_registration_path %></h5>
      </div>
</div>
</div>
