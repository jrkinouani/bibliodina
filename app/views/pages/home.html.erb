<header class="masthead">
     <div class="intro-body">
       <div class="container">
         <div class="row">
           <div class="text-center">
             <h1 class="brand-heading"></h1>
             <p class="intro-text">Partagez, empruntez, lisez !</p>
           </div>
         </div>
       </div>
     </div>
   </header>

<div class="container">
         <ul class="nav navbar-nav navbar" id="navabar-book">
             <li><%= link_to "Tous les livres", root_path %></li>
          <% Category.all.each do |category| %>
          <li><%= link_to category.genre, all_path(category: category.genre) %></li>
          <% end%>
      </ul>

  <% @books.each do |book| %>
<div class="row">
  <div class="col-lg-3  col-md-3 ">
    <div class="text-center">
    <%= link_to (image_tag(book.image, class:"card-img-top")), book %>
    </div>
      <h5 class="book_title"><%= book.title.capitalize %></h5>
      <h5 class="author">Par <%= book.author %></h5>
      <h5 class="full_name"> Ajout√© par <%= book.user.full_name %></h5>
    </div>
    <% end %>
</div>
</div>
