
  <div class="container">
    <div class="row">
      <div class="text-center">
        <h3 class="title_reunion">
          <% if @books.blank? %>
            <h3 class="no_city">Désolé il n'y pas de livre ou d'auteur avec ce mot "<%= params[:search] %>"</br> </h3>
            <i class="fa fa-book" aria-hidden="true" ></i>

            <% else %>
              <h3 class="title_reunion">Voici tous nos livres <%= params[:search] %></h3>

          <% end %>

      </div>
    </div>
    <div class="row">
      <% @books.each do |book| %>
    <div class="row">
      <div class="col-lg-3  col-md-3 ">
        <div class="text-center">
        <%= link_to (image_tag(book.image, class:"card-img-top")), book %>
        </div>
          <h5 class="book_title"><%= book.title.capitalize %></h5>
          <h5 class="author">Par <%= book.author %></h5>
          <h5 class="full_name"> Ajouté par <%= book.user.full_name %></h5>
        </div>
        <% end %>
    </div>
  </div>
